<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<properties>
		<property name="DATABASE" value="MYSQL" />
	</properties>
	
	<environments default="JournalDB">
		<environment id="JournalDB">
			<transactionManager type="JDBC" />
			<dataSource type="JNDI">
				<property name="initial_context" value="${initial_context}" />
				<property name="data_source" value="LEMPDS" />
			</dataSource>
		</environment>
	</environments>
	
	<mappers>
		<mapper url="file:///${lempCoreHome}/sql/${DATABASE}/journalSqlMap.xml" />		
	</mappers>
</configuration>
